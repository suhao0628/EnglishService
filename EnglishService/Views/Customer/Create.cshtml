@model CustomerCreateModel
@{
    ViewBag.Title = "Finish your customer account";
    var regionItems = Model.RegionItems.Select(t => new SelectListItem(t.Value, t.Key));
}
<div class="container jumbotron-opacity">
    <h1 class="text-center">@ViewBag.Title</h1>
    <hr />
    <form method="post" class="col-md-6 offset-md-3">
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" value="Male">
                <span class="form-check-label"> Male </span>
            </label>
            <label class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" value="Female">
                <span class="form-check-label"> Female</span>
            </label>
            <label class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" value="Others">
                <span class="form-check-label"> Others</span>
            </label>
        </div>
        <div class="form-group">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control" value="" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RegionId"></label>
            <select asp-for="RegionId" class="form-control" asp-items="regionItems">
                <option selected value="">
                    Choose a Region
                </option>
            </select>
            <span asp-validation-for="RegionId" class="text-danger"></span>
        </div>
        <div class="col-md-12 text-center">
            <input type="submit" class="btn btn-primary mb-2" />
        </div>
    </form>
</div>