@model ProfessionalCreateVM
@{
    ViewBag.Title = "Apply for a professional account";
    var specializationItems = Model.SpecializationItems.Select(s => new SelectListItem(s.Value, s.Key));
    var regionItems = Model.RegionItems.Select(s => new SelectListItem(s.Value, s.Key));
}

<div class="container jumbotron-opacity">
    <h1 class="text-center">@ViewBag.Title</h1>
    <hr />
    <form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group" id="img-form">
            <label asp-for="Image"></label>
            <input asp-for="Image" class="form-control-file nameExistErrClass" id="files" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control" value="" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Experience"></label>
            <input asp-for="Experience" class="form-control" />
            <span asp-validation-for="Experience" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RegionId"></label>
            <select asp-for="RegionId" class="form-control" asp-items="regionItems">
                <option selected value="">
                    Choose a Region
                </option>
            </select>
            <span asp-validation-for="RegionId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SpecializationId"></label>
            <select asp-for="SpecializationId" class="form-control" asp-items="specializationItems">
                <option selected value="">
                    Choose a specialization
                </option>
            </select>
            <span asp-validation-for="SpecializationId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Resume"></label>
            <textarea asp-for="Resume" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Resume" class="text-danger"></span>
        </div>
        <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-primary mb-2">Submmit</button>
        </div>
    </form>
</div>