<div class="container">
    <div class="card mt-5">
        <div class="card-header text-center">
            <h3><strong>Are you sure you want to cancel this appointment?</strong></h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group row text-center">
                    <label class="col-3 col-form-label">Appointment Time</label>
                    <div class="col-9">
                        <div class="form-control">@Model.DateTime</div>
                    </div>
                </div>
                <div class="form-group row text-center">
                    <label class="col-3 col-form-label">Professional</label>
                    <div class="col-9">
                        <div class="form-control">@Model.ProfessionalFullName</div>
                    </div>
                </div>
                <div class="form-group row text-center">
                    <label class="col-3 col-form-label">Address</label>
                    <div class="col-9">
                        <div class="form-control">@Model.ProfessionalRegionName, @Model.ProfessionalAddress</div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-auto">
                        <button type="submit" class="btn btn-success mt-3 mb-2"
                                asp-area="Customer" asp-controller="Appointment" asp-action="DeleteAppointment" asp-route-id="@Model.Id">
                            Cancel
                        </button>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-danger mt-3 mb-2"
                                asp-area="Customer" asp-controller="Appointment" asp-action="Index">
                            Back
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>