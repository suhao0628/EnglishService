@model ProfessionalEditVM
@{
    ViewBag.Title = "Edit your information";
    var specializationItems = Model.SpecializationItems.Select(s => new SelectListItem(s.Value, s.Key));
    var regionItems = Model.RegionItems.Select(s => new SelectListItem(s.Value, s.Key));
}
<div class="container jumbotron-opacity">
    <h1 class="text-center">@ViewBag.Title</h1>
    <hr />
    <form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="Id" value="@Model.Id" type="hidden" />
        </div>
        <div class="form-group">
            <input asp-for="ImageUrl" value="@Model.ImageUrl" type="hidden" />
        </div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" placeholder="@Model.FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" placeholder="@Model.LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group text-center">
            <img class="img-fluid" src="@Model.ImageUrl" alt="@Model.FirstName">
        </div>
        <div class="form-group" id="img-form">
            <label asp-for="Image"></label>
            <input asp-for="Image" class="form-control-file nameExistErrClass" id="files" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control" placeholder="@Model.Age" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="@Model.PhoneNumber" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Experience"></label>
            <input asp-for="Experience" class="form-control" placeholder="@Model.Experience" />
            <span asp-validation-for="Experience" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="@Model.Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" placeholder="@Model.Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RegionId"></label>
            <select asp-for="RegionId" class="form-control" asp-items="regionItems"></select>
            <span asp-validation-for="RegionId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SpecializationId"></label>
            <select asp-for="SpecializationId" class="form-control" asp-items="specializationItems"></select>
            <span asp-validation-for="SpecializationId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Resume"></label>
            <textarea asp-for="Resume" class="form-control" rows="3" placeholder="@Model.Resume"></textarea>
            <span asp-validation-for="Resume" class="text-danger"></span>
        </div>
        <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-primary mb-2">Edit profile</button>
        </div>
    </form>
</div>